rexercicio1
#include <stdio.h>

int main() {
    float notas[20];
    float soma = 0.0, media;
    int count = 0;

    // Leitura das notas
    for (int i = 0; i < 20; i++) {
        printf("Digite a nota do aluno %d: ", i + 1);
        scanf("%f", &notas[i]);
        soma += notas[i];
    }

    // Cálculo da média
    media = soma / 20;

    // Contagem de alunos com notas acima da média
    for (int i = 0; i < 20; i++) {
        if (notas[i] > media) {
            count++;
        }
    }

    // Saída dos resultados
    printf("Média da turma: %.2f\n", media);
    printf("Número de alunos com nota acima da média: %d\n", count);

    return 0;
}


exercicio2

#include <stdio.h>

int main() {
    int Q[20];
    int maior, pos;

    // Leitura do vetor
    for (int i = 0; i < 20; i++) {
        printf("Digite o valor para Q[%d]: ", i);
        scanf("%d", &Q[i]);
    }

    // Encontrar o maior valor e sua posição
    maior = Q[0];
    pos = 0;
    for (int i = 1; i < 20; i++) {
        if (Q[i] > maior) {
            maior = Q[i];
            pos = i;
        }
    }

    // Saída dos resultados
    printf("Maior valor: %d\n", maior);
    printf("Posição do maior valor: %d\n", pos);

    return 0;
}



